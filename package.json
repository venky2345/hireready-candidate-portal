{
  "name": "candidate-html-generator",
  "displayName": "Candidate HTML Generator",
  "description": "Generate personalized structured.html directly from GitHub Copilot Chat",
  "version": "1.0.0",
  "publisher": "hireready",
  "license": "MIT",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:candidateHtmlGenerator.generateFromChat",
    "onCommand:candidateHtmlGenerator.quickGenerate",
    "onCommand:candidateHtmlGenerator.showStatus"
  ],
  "contributes": {
    "commands": [
      {
        "command": "candidateHtmlGenerator.generateFromChat",
        "title": "Generate Candidate HTML from Chat",
        "description": "Generate personalized structured.html using data from GitHub Copilot Chat"
      },
      {
        "command": "candidateHtmlGenerator.quickGenerate",
        "title": "Quick Generate from Files",
        "description": "Generate HTML from selected admin_export.json and resume"
      },
      {
        "command": "candidateHtmlGenerator.showStatus",
        "title": "Show Generator Status",
        "description": "Show current generation status and configuration"
      }
    ],
    "configuration": {
      "title": "Candidate HTML Generator",
      "properties": {
        "candidateHtmlGenerator.baseTemplate": {
          "type": "string",
          "default": "structured.html",
          "description": "Path to base template file"
        },
        "candidateHtmlGenerator.outputDirectory": {
          "type": "string",
          "default": "./",
          "description": "Output directory for generated files"
        },
        "candidateHtmlGenerator.enableAutoBackup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically backup existing files"
        }
      }
    }
  },
  "dependencies": {
    "vscode": "^1.85.0"
  }
}
